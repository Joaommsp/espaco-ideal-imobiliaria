generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario_cliente {
  id          Int    @id @default(autoincrement())
  id_firebase String @unique
  nome        String
  email       String @unique
  senha       String

  agendamentos Agendamento_propriedade[]
}

model Propriedade {
  id                Int    @id @default(autoincrement())
  id_cidade         Int
  id_categoria      Int
  id_usuario        Int
  registro          String
  endereco          String
  qtd_quartos       Int
  qtd_vagas_garagem Int
  descricao         String
  preco             Float
  imagem            String

  agendamentos         Agendamento_propriedade[]
  cidade               Cidade                    @relation(fields: [id_cidade], references: [id])
  categoria            Categoria                 @relation(fields: [id_categoria], references: [id])
  Cadastro_propriedade Cadastro_propriedade[]
}

model Agendamento_propriedade {
  id               Int      @id @default(autoincrement())
  id_usuario       Int
  id_propriedade   Int
  data_agendamento DateTime

  usuario_cliente Usuario_cliente @relation(fields: [id_usuario], references: [id])
  propriedade     Propriedade     @relation(fields: [id_propriedade], references: [id])
}

model Cadastro_propriedade {
  id               Int @id @default(autoincrement())
  id_propriedade   Int
  id_administrador Int

  propriedade   Propriedade   @relation(fields: [id_propriedade], references: [id])
}

model Cidade {
  id          Int    @id @default(autoincrement())
  nome_cidade String

  propriedades Propriedade[]
}

model Categoria {
  id             Int    @id @default(autoincrement())
  nome_categoria String

  propriedades Propriedade[]
}
